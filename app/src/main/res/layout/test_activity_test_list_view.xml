<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.jpar4.mitfahren.tmap_test.TestLIstView">

<LinearLayout
    android:id="@+id/search_top_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <!--검색 설정 버튼-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        >
        <!--android:background="@color/colorPrimary"-->
        <Button
            android:id="@+id/btn_search"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색"
            android:background="@drawable/blue_rounded_corners_bg"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            />
        <ImageButton
            android:id="@+id/btn_search_option"
            android:src="@drawable/downarrow"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#00ffffff"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <!--검색 설정 버튼 끝-->
    <!--설정-->
        <LinearLayout
            android:id="@+id/search_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_border_button"
            android:visibility="gone"
            >
            <!--android:visibility="gone"-->
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기간"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="5"
                >

                <EditText
                    android:id="@+id/from_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1.67"
                    android:drawableRight="@drawable/calendar12"
                    android:ems="10"
                    android:textSize="14sp"
                    android:hint="날짜 선택" />
                <!--android:inputType="textPersonName"-->
                <TextView
                    android:layout_weight="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    />

                <EditText
                    android:id="@+id/to_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="8dp"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/calendar12"
                    android:ems="10"
                    android:hint="날짜 선택"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />
            </LinearLayout>

        <!--기간끝-->
        <!--범위시작-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="범위"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="4"
                >

                <Spinner

                    android:id="@+id/option_spinnner_distance"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2" />
                <!--android:ems="10"-->
                <EditText
                    android:id="@+id/et_option_distance"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="( 예 ) 100"
                    android:textStyle="bold"
                    android:maxLength="5"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="M 이내"
                    />
            </LinearLayout>
     <!--범위 끝-->
            <!--성별 시작, 정렬 같이-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="성별"
                android:textSize="15sp"
                />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="정렬"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="2"

                >
                <Spinner
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/option_spinnner_sex"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <Spinner
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/option_spinnner_howtoshow"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <!--성별, 정렬 끝-->
        </LinearLayout>
</LinearLayout>

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listView"
    android:layout_below="@+id/search_top_layout"
    />
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true"-->
</RelativeLayout>
