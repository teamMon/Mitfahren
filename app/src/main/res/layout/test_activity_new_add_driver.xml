<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jpar4.mitfahren.tmap_test.NewAddDriverActivity"
    android:layout_margin="16dp"
    >

    <ImageView
        android:id="@+id/add_driver_iv_car"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_car"
        />
    <ImageButton
        android:id="@+id/join_ibtn_uploadprofile"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_add_photo"
        android:scaleType="fitCenter"
        android:background="#00ffffff"
        />

<TextView
    android:id="@+id/textView10"
    android:layout_below="@+id/add_driver_iv_car"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="출발 날짜 : "
    android:textSize="20sp" />

<EditText
    android:id="@+id/date"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="출발 날짜 선택"
    android:inputType="textPersonName"
    android:layout_marginLeft="13dp"
    android:layout_marginStart="13dp"
    android:drawableRight="@drawable/calendar12"
    android:layout_alignBaseline="@+id/textView10"
    android:layout_alignBottom="@+id/textView10"
    android:layout_toRightOf="@+id/textView10"
    android:layout_toEndOf="@+id/textView10" />

<TextView
    android:id="@+id/textView15"
    android:layout_below="@+id/textView10"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="출발 시간 : "
    android:textSize="20sp" />

<EditText
    android:id="@+id/time"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="출발 시간 선택"
    android:inputType="textPersonName"
    android:layout_marginLeft="13dp"
    android:layout_marginStart="13dp"
    android:drawableRight="@drawable/time1"
    android:layout_alignBaseline="@+id/textView15"
    android:layout_alignBottom="@+id/textView15"
    android:layout_toRightOf="@+id/textView15"
    android:layout_toEndOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_below="@+id/textView15"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="탑승 가능 인원 : "
        android:textSize="20sp" />

    <Spinner
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/add_driver_spin_people_num"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="right"></Spinner>

