<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_carpool_list_for_driver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_notifications_monjimolla"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="top|left|center_horizontal|right"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/item_driver_info_top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#ebdf072f">

                <TextView
                    android:id="@+id/tv_item_noti_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginLeft="16dp"
                    android:drawablePadding="6dp"
                    android:paddingBottom="4dp"
                    android:text="카풀 신청"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_noti_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginRight="16dp"
                    android:drawablePadding="6dp"
                    android:paddingBottom="4dp"
                    android:text="2017. 08. 20."
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <ImageView
                android:id="@+id/iv_item_noti_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:alpha="0.3"
                android:scaleType="fitXY"
                android:background="@color/carpool_before_item_click"
                />

            <ImageView
                android:id="@+id/iv_item_noti_profile_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/tv_item_noti_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="xxx님이 카풀을 신청했습니다."
                android:textSize="15sp" />
        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>