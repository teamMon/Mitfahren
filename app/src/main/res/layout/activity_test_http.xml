<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".test_activity.TestHttpActivity" >

    <EditText
        android:id="@+id/editAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="서울 강남구 역삼동 831-38" />

    <Button
        android:id="@+id/btnHttp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/editAddr"
        android:onClick="onClick"
        android:text="Http1" />

    <Button
        android:id="@+id/btnHttp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/editAddr"
        android:layout_toRightOf="@id/btnHttp1"
        android:onClick="onClick"
        android:text="Http2" />

    <Button
        android:id="@+id/btnHttp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/editAddr"
        android:layout_toRightOf="@id/btnHttp2"
        android:onClick="onClick"
        android:text="Http3" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/btnHttp1"
        android:text="Press Button" />

</RelativeLayout>
