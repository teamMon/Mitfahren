<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_carpool_list_for_driver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_notifications_monjimolla"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_gravity="top|left|center_horizontal|right"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
<FrameLayout
    android:id="@+id/item_driver_info_top"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#ebdf072f"
    >
    <TextView
        android:id="@+id/tv_item_carpool_info_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:paddingBottom="4dp"
        android:drawablePadding="6dp"
        android:text="2017. 08. 20."
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_carpool_info_current_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:textStyle="bold"
        android:layout_marginRight="16dp"
        android:paddingBottom="4dp"
        android:drawablePadding="6dp"
        android:text="인원 : 0 / 4"
        android:textColor="@color/white"
        android:textSize="14sp" />


</FrameLayout>

            <ImageView
                android:id="@+id/iv_item_carpool_info_main"
                android:alpha="0.3"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5"
    >



            <LinearLayout
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="55dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorAccent4"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="출발지"
                    android:textSize="10sp"
                    />
                <TextView
                    android:id="@+id/tv_item_carpool_info_start"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:lines="1"
                    android:textSize="16sp"
                    android:maxLines="1"

                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:gravity="center"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorAccent4"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="도착지"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tv_item_carpool_info_arrive"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:lines="1"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:gravity="center"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/colorAccent4"
                    />
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/iv_item_carpool_info_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/searching"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>
</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <!--<TextView
                    android:id="@+id/tv_item_carpool_info_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:paddingBottom="4dp"
                    android:drawablePadding="6dp"
                    android:text="현재 : 0 / 4"
                   android:background="@drawable/blue_border_button"
                    android:textSize="14sp" />-->
          <!--      android:textColor="@color/purple"-->
                <Button

                    android:id="@+id/btn_carpool_cancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:background="@drawable/blue_border_button"
                    android:clickable="false"
                    android:text="카풀 취소"
                    android:textColor="@color/gomalan_bule_bg"
                    android:textStyle="bold" />

                <Button

                    android:id="@+id/btn_carpool_recruit_complete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:background="@drawable/blue_border_button"
                    android:clickable="false"
                    android:text="인원 마감"
                    android:textColor="@color/gomalan_bule_bg"

                    android:textStyle="bold" />
                <!--android:visibility="gone"-->

                <Button
                    android:id="@+id/btn_item_carpool_info"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_button"
                    android:text="카풀 정보"
                    android:textColor="@color/gomalan_bule_bg"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tv_item_carpool_info_status"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rounded_corners_bg"
                    android:text="모집중"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/line_divider"
                android:layerType="software" />
        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>